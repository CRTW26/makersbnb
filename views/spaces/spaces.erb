<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">MakersBnB</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-link active" href="/spaces">Home <span class="sr-only">(current)</span></a>
      <a class="nav-link" href="/spaces/new">Add Space</a>
      <a class="nav-link" href="/spaces/:userid">View My Spaces</a>
    </div>
  </div>
</nav>

<h1>List of all spaces!</h1>

<ul>
  <% @spaces.each do |space| %>
    <%= space.name %> <br>
    <%= space.price %> <br>
    <%= space.description %><br>
    <br>

  <% end %>
</ul>

<form action="/sessions/destroy" method="post" class="signout">
  <input type="submit" value="Sign out"/>
</form>